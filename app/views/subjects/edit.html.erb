<%= link_to("<< Back to Main", subjects_path, :class => 'back-link') %>

<div class="subjects edit">
  <h2>Update Book Information</h2>

  <%= form_for(@subject) do |f| %>

    <table summary="Subject form fields">
      <tr>
        <th>Title</th>
        <td><%= f.text_field(:title) %></td>
      </tr>
      <tr>
        <th>Author</th>
        <td><%= f.text_field(:author) %></td>
      </tr>
      <tr>
        <th>Genre</th>
        <td><%= f.select(:genre, ['Action', 'Adventure', 'Alternate history','Autobiography', 'Business' 'Childrens','Classic','Comedy','Comic','Crime','Drama','Fanatasy','History','Historical fiction','Horror']) %></td>
      </tr>
      <tr>
        <th>Price</th>
        <td><%= f.text_field(:price) %></td>
      </tr>
      <tr>
        <th>Publish Date</th>
        <td><%= f.date_select(:publishdate) %></td>
      </tr>
    </table>

    <div class="form-buttons">
      <%= f.submit("Update Book Information") %>
    </div>

  <% end %>
</div>
